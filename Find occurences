// Find all occurences(indices) of given element(key) ?
public class Occurences_key {
    public static boolean allOccurences(int arr[], int key, int i){
        if(i == arr.length){
            return i;
        }
        if(arr[i] = key){
            System.out.print(i + " ");
        }
    }
    public static void main(String args[]){
        int arr[] = {3,2,4,5,6,2,7,2,2};
        int key = 2;
        allOccurences(arr,key,0);
        System.out.println();
    }
}